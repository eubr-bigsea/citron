<div class='gViz-wrapper gViz-table-wrapper' data-id={{_id}} style='{{myStyle}}'>
  <div class="row">
    <div class="col-4">
      <div class="input-group">
        <input type="text" class="form-control" data-action='search' onkeyup={{action 'updateSearch'}} placeholder="Search..." />
        <div class="input-group-append" {{action 'submitSearch'}}>
          <span class="input-group-text"><i class='fa fa-search'></i></span>
        </div>
      </div>
    </div>
  </div>
  <div class='gViz-table-wrapper-scroll' style='{{myTableStyle}}' >
    <table class="table table-bordered table-hover gViz-table">
      <thead>
        <tr>
          {{#each header as |h i|}}
            <td {{action 'sortTable' i}} data-sort='{{i}}'><span>{{h}}</span><i class='fa fa-sort pull-right'></i></td>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each filteredData as |tr|}}
          <tr>
            {{#each tr as |td|}}
              <td>{{td}}</td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>

    {{#if isEmpty}}

      <h5 class="no-data" style="padding-top: {{paddingTop}}px; text-align: center;">
        NO DATA AVAILABLE
      </h5>

    {{/if}}

  </div>
</div>
