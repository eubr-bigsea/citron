<div id="main-wrapper" class="main wrapper">
  {{main-sidebar }}
  <div id="main-content-wrapper" class="main content wrapper">
    {{app-header}}
    <article class="content items-list-page">
      <div class="title-search-block">
        <div class="title-block">
          <div class="row">
            <div class="col-md-6">
              <h3 class="title"> <i class="fa fa-flask"></i> Jobs
              </h3>
              <p class="title-description"> List of all Jobs - e.g. Running, finished,  etc... </p>
            </div>
          </div>
        </div>
        <div class="items-search">
          <form class="form-inline">
            <div class="input-group"> <input type="text" class="form-control boxed rounded-s" placeholder="Search for..."> <span class="input-group-btn">
                <button class="btn btn-secondary rounded-s" type="button">
                  <i class="fa fa-search"></i>
                </button>
              </span> </div>
          </form>
        </div>
      </div>
      {{jobs/table-jobs model=model}}
    </article>
    {{outlet}}
  </div><!--main-content-wrapper-->
</div><!--main-wrapper-->

