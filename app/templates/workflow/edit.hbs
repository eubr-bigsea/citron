{{main-sidebar workflowsActive='active'}}
<article class="content item-editor-page">
  <div class="title-block">
    <h3 class="title"> Editing workflow: <strong>{{model.name}}</strong>
      <span class="sparkline bar" data-type="bar"></span>
    </h3>
  </div>
  <form name="item" id="edit-workflow" {{action 'save' on='submit'}}>
    <div class="card card-block">
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Name: </label>
        <div class="col-sm-10">
          {{input type="text" class="form-control boxed" placeholder=model.name value=model.name}}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Description: </label>
        <div class="col-sm-10">
          <div class="form-group">
            {{textarea class="form-control" id="description" rows="5"  maxlength="1600" height="30vh" value=model.description }}
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right">
          Images:
        </label>
        <div class="col-sm-10">
          <div class="images-container">
            <div class="image-container">
              <div class="image" style="background-image:url('http://www.clipartbest.com/cliparts/nTE/Mg6/nTEMg6nTA.png')"></div>
            </div>
            <div class="image-container">
              <div class="image" style="background-image:url('https://s-media-cache-ak0.pinimg.com/564x/b0/2b/64/b02b64dcc137b4f9300ac9a1492ec5df.jpg')">
              </div>
            </div>
            <div class="image-container">
              <div class="image" style="background-image:url('http://www.polyvore.com/cgi/img-thing?.out=jpg&size=l&tid=63739140')"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 col-sm-offset-2">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </div>
  </form>
</article>

