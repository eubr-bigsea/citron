<td>{{#link-to 'workflow.draw' workflow.id}}{{workflow.id}}{{/link-to}}</td>
<td>{{#link-to 'workflow.draw' workflow.id}}{{workflow.name}}{{/link-to}}</td>
<td>
  <div class="row">
    <div class="icon col-xs-3">
      {{#link-to 'workflow.edit' workflow.id}}{{fa-icon "cog" size="lg"}}{{/link-to}}
    </div>
    <div class="icon col-xs-3">
      {{#link-to 'workflow.draw' workflow.id}}{{fa-icon "pencil" size="lg"}}{{/link-to}}
    </div>
    <div class="icon col-xs-3">
      <a class="remove" {{action 'deleteWorkflow' workflow}} href="#" >{{fa-icon "trash" size="lg"}}</a>
    </div>
  </div>
</td>
<td>{{format-date workflow.updated locale=locale}}</td>
{{confirmation-modal
workflow=workflow
name=name
modal3=modal3
toDelete=toDelete
deleting=true
message="Are you sure, that you want to delete this workflow?"}}
