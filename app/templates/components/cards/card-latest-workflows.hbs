<div class="card" id='release-notes'>
  <div class="card-header">
    <div class="header-block">
      <h3 class="title">{{t 'latestEditedWorkflows'}}</h3>
    </div>
  </div>
  <div class="card-block" id="large-table-workflows">
    <table class="table table-hover" style="table-layout: fixed; word-wrap: break-word;">
      <thead>
        <tr>
          <th>{{t 'id'}}</th>
          <th>{{t 'name'}}</th>
          <th>{{t 'options'}}</th>
          <th>{{t 'created'}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each workflows as |workflow|}}
          {{#unless workflow.isDeleted}}
            {{cards/item-list-workflow workflow=workflow}}
          {{/unless}}
        {{/each}}
      </tbody>
    </table>
    {{outlet}}
  </div>
</div>
