<div class="card card-block">
  <div class="form-group row">
    <label class="col-sm-2 form-control-label"> Name: </label>
    <div style="margin-left:10px">
      {{input type="text" class="form-control boxed" placeholder=workflow.name value=workflow.name}}
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label"> Description: </label>
    <div style="margin-left:10px">
      <div class="form-group">
        {{textarea class="form-control" id="description" rows="5"  maxlength="1600" height="30vh" value=workflow.description }}
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label"> Group: </label>
    <div style="margin-left:10px">
      <select class="c-select form-control boxed" value='group'>
        <option selected="">Select group</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
      </select> </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">
      Images:
    </label>
    <div style="margin-left:10px">
      <div class="images-container">
        <div class="image-container">
          <div class="image" style="background-image:url('http://www.clipartbest.com/cliparts/nTE/Mg6/nTEMg6nTA.png')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('https://s-media-cache-ak0.pinimg.com/564x/b0/2b/64/b02b64dcc137b4f9300ac9a1492ec5df.jpg')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('http://www.polyvore.com/cgi/img-thing?.out=jpg&size=l&tid=63739140')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('https://s-media-cache-ak0.pinimg.com/236x/33/1d/fc/331dfc5cd183445fccf2700b1171c928.jpg')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('http://www.coloringsky.com/wp-content/uploads/2014/10/Drawing-Lemon-Coloring-Page.jpg')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('https://foodartist.files.wordpress.com/2010/05/lemon-and-half1.jpg')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('http://s7.leapfrog.com/is/image/LeapFrog/Printable-Smelly-Lemon-Art?$lp-card-img$')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('http://us.123rf.com/450wm/sabelskaya/sabelskaya1611/sabelskaya161100171/67895369-hand-drawn-slice-of-lemon-sketch-style-vector-illustration-isolated-on-white-background-drawing-of-l.jpg?ver=6')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('http://www.clker.com/cliparts/f/1/4/3/1194986128533849690lemon1.svg.hi.png')"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 col-sm-offset-2">
      <button type="submit" class="btn btn-primary"> {{buttonText}} </button>
    </div>
  </div>
</div>
