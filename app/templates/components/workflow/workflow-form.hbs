<div class="card card-block">
  <div class="form-group row">
    <label class="col-sm-2 form-control-label text-xs-right"> Name: </label>
    <div class="col-sm-10">
      {{input type="text" class="form-control boxed" placeholder=workflow.name value=workflow.name}}
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label text-xs-right"> Description: </label>
    <div class="col-sm-10">
      <div class="form-group">
        {{textarea class="form-control" id="description" rows="5"  maxlength="1600" height="30vh" value=workflow.description }}
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label text-xs-right"> Group: </label>
    <div class="col-sm-10">
      <select class="c-select form-control boxed" value='group'>
        <option selected="">Select group</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
      </select> </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label text-xs-right">
      Images:
    </label>
    <div class="col-sm-10">
      <div class="images-container">
        <div class="image-container">
          <div class="image" style="background-image:url('http://www.clipartbest.com/cliparts/nTE/Mg6/nTEMg6nTA.png')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('https://s-media-cache-ak0.pinimg.com/564x/b0/2b/64/b02b64dcc137b4f9300ac9a1492ec5df.jpg')"></div>
        </div>
        <div class="image-container">
          <div class="image" style="background-image:url('http://www.polyvore.com/cgi/img-thing?.out=jpg&size=l&tid=63739140')"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 col-sm-offset-2">
      <button type="submit" class="btn btn-primary"> {{buttonText}} </button>
    </div>
  </div>
</div>
