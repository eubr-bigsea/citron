<div class="card card-block">
  <div class="form-group row">
    <label class="col-sm-2 form-control-label"> Name: </label>
    <div style="margin-left:10px">
      {{input type="text" class="form-control boxed" placeholder=workflow.name value=workflow.name}}
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label"> Description: </label>
    <div style="margin-left:10px">
      <div class="form-group">
        {{textarea class="form-control" id="description" rows="5"  maxlength="1600" height="30vh" value=workflow.description }}
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label"> Group: </label>
    <div style="margin-left:10px">
      <select class="c-select form-control boxed" value='group'>
        <option selected="">Select group</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
      </select> </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 form-control-label">
      Images:
    </label>
    <div style="margin-left:10px">
      <div class="images-container">
        <div class="image-container">
          <img class="image" src="/assets/images/img1.png">
        </div>
        <div class="image-container">
          <img class="image" src="/assets/images/img2.jpg">
        </div>
        <div class="image-container">
          <img class="image" src="/assets/images/img3.jpg">
        </div>
        <div class="image-container">
          <img class="image" src="/assets/images/img4.jpg">
        </div>
        <div class="image-container">
          <img class="image" src="/assets/images/img5.jpg">
        </div>
        <div class="image-container">
          <img class="image" src="/assets/images/img6.jpg">
        </div>
        <div class="image-container">
          <img class="image" src="/assets/images/img7.jpg">
        </div>
        <div class="image-container">
          <img class="image" src="/assets/images/img8.jpg">
        </div>
        <div class="image-container">
          <img class="image" src="/assets/images/img9.png">
        </div>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10 col-sm-offset-2">
      <button type="submit" class="btn btn-primary"> {{buttonText}} </button>
      {{#link-to 'home.workflows'}}
        <button class="btn btn-danger">Cancel</button>
      {{/link-to}}
    </div>
  </div>
</div>
