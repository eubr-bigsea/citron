<div class="gViz-header">
  <div class='symbol'>
    <span class="fa-stack fa-lg">
      <i class="fa fa-circle fa-stack-2x"></i>
      <i class="fa fa-pie-chart fa-stack-1x fa-inverse"></i>
    </span>
  </div>
  <span class='title'>
    {{title}}
    <span class="controls pull-right">
      <select id="order" class="form-control">
        <option value="ascending">Ascending</option>
        <option value="descending">Descending</option>
        <option value="alphabetically">Alphabetically</option>
      </select>
    </span>
    <span class="pull-right" style='line-height: 40px; margin-right: 10px; font-weight: normal;'>Order by:</span>
  </span>
</div>

<div class='gViz-wrapper' data-id={{_id}} style={{style}} ></div>
