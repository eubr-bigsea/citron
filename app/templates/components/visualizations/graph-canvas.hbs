<div class="canvas-wrapper">
  <div class="controls">
    <span class='btn btn-dark btn-md' id='zoom-in' ><i class='fa fa-search-plus'></i></span>
    <span class='btn btn-dark btn-md' id='zoom-out'><i class='fa fa-search-minus'></i></span>
    <span class='btn btn-dark btn-md' id='zoom-reset'>RESET Zoom</span>
    <div class="btn-group pull-right action-switch" role="group" aria-label="">
      <span class='btn btn-dark btn-md active' id='drag'><i class='fa fa-hand-pointer-o'></i></span>
      <span class='btn btn-dark btn-md' id='zoom'><i class='fa fa-search'></i></span>
      <span class='btn btn-dark btn-md' id='pan'><i  class='fa fa-arrows'></i></span>
    </div>
    <span class='btn btn-dark btn-md' id='highlight-reset'>RESET Highlight</span>
  </div>
  <div class='gViz-wrapper' data-id={{_id}} style={{style}} data-canvas='graph-canvas' data-action='drag'></div>
</div>

