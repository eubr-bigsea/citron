{{#each forms as |form|}}
  <fieldset>
    <legend>{{form.name}}</legend>
    {{#each form.fields as |field|}}
      {{forms/form-label field=field}}
      {{component
      (concat 'forms/form-' field.suggested_widget)
      currentValue=(get (get filledForms field.name) 'value')
      name=field.name
      field=field
      onValueChanged=(action 'formChanged')}}
      {{!-- Verificar se precisamos mesmo do field=field --}}
    {{/each}}
  </fieldset>
{{/each}}
