<div class="operations-list" id="operations-list">
  <ul class="metismenu" id="categories-list">
    <div class="pull-right items-search" style="margin-left: 10px;">
      <form onsubmit="return false" class="form-inline">
        <div class="input-group">
          {{input id="input" type="search" class="form-control boxed " placeholder=(t 'workflows.searchFor') value=filterText autocomplete='off'}}
          <span class="input-group-btn">
            <button id="submit" class="btn btn-secondary" type="button">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      </form>
    </div>
    {{#if (eq filterText "")}}
      {{#each groupedOperations as | elementArray |}}
        {{#each-in elementArray as |group subgroup|}}
          {{#if (eq group "_data")}}
            {{#each subgroup as |operation|}}
              {{workflows/operation-element  operation=operation}}
            {{/each}}
          {{else}}
            <li>
              <a href="#">
                <i class="fa fa-th-large"></i>
                <span>{{group}}</span>
              </a>
              <ul>
                {{#each subgroup as |subElements|}}
                  {{#each-in subElements as |op elements|}}
                    {{#if (eq op "_data")}}
                      {{#each elements as |element|}}
                        {{workflows/operation-element operation=element}}
                      {{/each}}
                    {{else}}
                      <li>
                        <a href="#">
                          <i class="fa fa-th-large"></i>
                          <span>{{op}}</span>
                        </a>
                        <ul>
                          {{#each-in elements as |sub element|}}
                            {{#each element as |el|}}
                              {{workflows/operation-element operation=el}}
                            {{/each}}
                          {{/each-in}}
                        </ul>
                      </li>
                    {{/if}}
                  {{/each-in}}
                {{/each}}
              </ul>
            </li>
          {{/if}}
        {{/each-in}}
      {{/each}}
    {{else}}
      {{#each filteredResults as |operation|}}
        <li>
          {{workflows/operation-element operation=operation}}
        </li>
      {{/each}}
    {{/if}}
  </ul>
</div>
<div class="btn btn-primary" id= "open-operations-list" onclick={{action "toggleSidebar"}}>
  <i href="#" id="open-menu" class="fa fa-angle-left arrow"></i>
</div>
