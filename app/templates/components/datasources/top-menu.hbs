<div class="row">
  <div class="col-xs-3 title-block">
    <h3 class="title"> <i class="fa fa-database"></i> {{t 'datasources.self'}}
    </h3>
    <p class="title-description">{{t 'datasources.description'}}</p>
  </div>
  <div class="col-xs-4 buttons-menu">
    {{link-to (t 'datasources.upload') 'datasource.new' class="create-new btn ember-view"}}
  </div>
  <div class="col-xs-5 search-bar">
    <div class="pull-right items-search">
      <form onsubmit="return false" class="form-inline">
        <div class="input-group">
          {{input type="search"  class="form-control boxed" placeholder=(t 'datasources.searchFor') value=filterText}}
          <span class="input-group-btn">
            <button id="submit" class="btn btn-secondary" type="button">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      </form>
    </div>
  </div>
</div><!-- row -->
