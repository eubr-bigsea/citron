<li class="item item-list-header hidden-sm-down">
  <div class="item-row">
    <div class="item-col fixed item-col-check">
      <label class="item-check" {{action 'checked' on='click'}}>
        <input type="checkbox" id="select-all-items" class="checkbox">
        <span></span>
      </label>
    </div>
    <div class="item-col item-col-header fixed item-col-img md">
      <div>
        <span>Logo</span>
      </div>
    </div>
    <div class="item-col item-col-header item-col-id">
      <div>
        <span {{action 'changeSorter' 'id'}}>ID</span>
      </div>
    </div>
    <div class="item-col item-col-header item-col-title">
      <div>
        <span {{action 'changeSorter' 'name'}}>Name</span>
      </div>
    </div>
    <div class="item-col item-col-header item-col-options">
      <div class="no-overflow">
        <span>Options</span>
      </div>
    </div>
    <div class="item-col item-col-header item-col-category">
      <div class="no-overflow">
        <span>Group</span>
      </div>
    </div>
    <div class="item-col item-col-header item-col-author">
      <div class="no-overflow">
        <span {{action 'changeSorter' 'user.name'}}>Author</span>
      </div>
    </div>
    <div class="item-col item-col-header item-col-date">
      <div>
        <span {{action 'changeSorter' 'updated'}}>Updated at</span>
      </div>
    </div>
  </div>
</li>
{{#each pagedContent as |workflow|}}
  {{#unless workflow.isDeleted}}
    {{workflows.table-item workflow=workflow}}
  {{/unless}}
{{/each}}
{{page-numbers content=pagedContent}}
{{outlet}}
