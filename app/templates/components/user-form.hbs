<article class="content item-editor-page">
  <div class="title-block">
    <h3 class="title"> Your profile, <strong>{{user.firstname}}</strong>
      <span class="sparkline bar" data-type="bar"></span>
    </h3>
  </div>
  <form name="item" id="edit-workflow" {{action 'save' on='submit'}}>
    <div class="card card-block">
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> First name: </label>
        <div class="col-sm-10">
          {{input type="text" class="form-control boxed" placeholder='First name' value=user.firstName}}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Last name: </label>
        <div class="col-sm-10">
          {{input type="text" class="form-control boxed" placeholder='Last name' value=user.lastName}}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Email: </label>
        <div class="col-sm-10">
          {{input readonly="readonly" type="text" class="form-control boxed" placeholder=Email value=user.email}}
        </div>
      </div>
      {{!--
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Password: </label>
        <div class="col-sm-10">
          {{input readonly="readonly" type="password" class="form-control boxed" placeholder=user.password value=user.password}}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Locale: </label>
        <div class="col-sm-10">
          <select class="custom-select" onchange={{action (mut user.locale) value="target.value"}}>
            {{log }}
            {{#each locales as |locale|}}
              <option value={{locale}} selected={{eq locale currentLocale}}>{{t locale}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      --}}
      <div class="form-group row">
        <div class="col-sm-10 col-sm-offset-2">
          <button type="submit" class="btn btn-primary">Save</button>
          {{#link-to 'workflows'}}
            <button type="info" class="btn btn-primary">Change Password</button>
          {{/link-to}}
          {{#link-to 'workflows'}}
            <button class="btn btn-danger">Cancel</button>
          {{/link-to}}
        </div>
      </div>
    </div>
  </form>
</article>
