<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 title-block">
      <h3 class="title"> {{t 'forms.yourProfile'}}, <strong>{{user.firstName}}</strong>
        <span class="sparkline bar" data-type="bar"></span>
      </h3>
    </div>
  </div>
  <div class="row">
    <form name="item" {{action 'save' on='submit'}}>
      <div class="card card-block">
        <div class="form-group row">
          <label class="col-sm-2 form-control-label text-xs-right">{{t 'forms.firstName.label'}}: </label>
          <div class="col-sm-10">
            {{input type="text" class="form-control boxed" placeholder=(t 'forms.firstName.placeholder') value=user.firstName}}
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 form-control-label text-xs-right">{{t 'forms.lastName.label'}}:</label>
          <div class="col-sm-10">
            {{input type="text" class="form-control boxed" placeholder=(t 'forms.lastName.placeholder') value=user.lastName}}
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 form-control-label text-xs-right">{{t 'forms.email.label'}}: </label>
          <div class="col-sm-10">
            {{input readonly="readonly" type="text" class="form-control boxed" placeholder=(t forms.email.placeholder) value=user.email}}
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 form-control-label text-xs-right">{{t 'forms.locale.label'}}: </label>
          <div class="col-sm-10">
            <select class="custom-select" onchange={{action (mut user.locale) value="target.value"}}>
              {{#each locales as |locale|}}
                <option value={{locale}} selected={{eq locale user.locale}}>{{t locale}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-primary confirm">{{t 'forms.save'}}</button>
            {{#link-to 'workflows'}}
              <button type="info" class="btn btn-primary info">{{t 'forms.changePassword'}}</button>
            {{/link-to}}
            {{#link-to 'workflows'}}
              <button class="btn btn-danger">{{t 'forms.cancel'}}</button>
            {{/link-to}}
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
