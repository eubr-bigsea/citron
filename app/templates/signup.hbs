<div class="auth container-fluid">
  <div class="row">
    <div class="auth-container col-xs-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <header class="auth-header">
        {{#link-to 'landing-page'}}<img src="assets/images/logo2.png" alt="" height = 40px;>{{/link-to}}
      </header>
        <div class="auth-content">
          <p class="text-xs-center">{{t 'forms.signUp'}}</p>
          <form id="signup-form" {{action 'signup' on='submit'}}>
            <div class="form-group">
              <label for="firstname">{{t 'forms.name.label'}}</label>
              <div class="row">
                <div class="col-sm-6 form-group" id="first_name">
                  {{input type="text" class="form-control underlined" name="firstname" id="firstname" placeholder=(t 'forms.firstName.placeholder') value=model.firstName}}
                  {{#each model.errors.first_name as |error|}}
                    <span class="has-error">{{error.message}}</span>
                  {{/each}}
                </div>
                <div class="col-sm-6 form-group" id="last_name">
                  {{input type="text" class="form-control underlined" name="lastname" id="lastname" placeholder=(t 'forms.lastName.placeholder')  value=model.lastName}}
                  {{#each model.errors.last_name as |error|}}
                    <span class="has-error">{{error.message}}</span>
                  {{/each}}
                </div>
              </div>
            </div>
            <div class="form-group" id="email">
              <label for="email">{{t 'forms.email.label'}}</label>
              {{input type="email" class="form-control underlined" name="email" id="email" placeholder=(t 'forms.email.placeholder')  value=model.email}}
              {{#each model.errors.email as |error|}}
                <span id="email" class="has-error">{{error.message}}</span>
              {{/each}}
            </div>
            <div class="form-group">
              <label for="password">{{t 'forms.password.label'}}</label>
              <div class="row">
                <div class="col-sm-6 form-group" id="password">
                  {{input type="password" class="form-control underlined" name="password" id="password" placeholder=(t 'forms.password.placeholder')  value=model.password}}
                  {{#each model.errors.password as |error|}}
                    <span class="has-error">{{error.message}}</span>
                  {{/each}}
                </div>
                <div class="col-sm-6 form-group" id="password_confirmation">
                  {{input type="password" class="form-control underlined" name="password_confirmation" id="password_confirmation" placeholder=(t 'forms.passwordConfirmation.placeholder') value=model.passwordConfirmation}}
                  {{#each model.errors.password_confirmation as |error|}}
                    <span class="has-error">{{error.message}}</span>
                  {{/each}}
                </div>
              </div>
            </div>
            <!-- TO DO -->
            <div class="form-group">
              <label for="agree">
                {{input class='checkbox' name='agree' id='agree' type='checkbox' checked=agreed}}
                <span class="checkbox-text">{{t 'forms.agree.label'}} {{#link-to "policy"}}{{t 'forms.policy'}}{{/link-to}}</span>
              </label>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-block btn-primary sign-up">{{t 'forms.signUp'}}</button>
            </div>
            <div class="form-group">
              <p class="text-muted text-xs-center">{{t 'forms.alreadyAccount'}}
              {{#link-to "login"}}{{t 'forms.login'}}!{{/link-to}}
              </p>
            </div>
          </form>

        </div>
    </div><!-- .auth-container col -->
  </div><!-- .row -->
</div><!-- .auth conteiner-fluid -->
{{outlet}}
