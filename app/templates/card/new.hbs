<article class="content item-editor-page">
  <div class="title-block content-title">
    <h3 class="title"> Creating new card:
      <span class="sparkline bar" data-type="bar"></span>
    </h3>
  </div>
  <form name="item" id="edit-workflow" {{action 'create' on='submit'}}>
    <div class="card card-block">
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Categoria: </label>
        <div class="col-sm-10">
          <select class="c-select from-control boxed platform" id="platform" >
            <option value="message">Message</option>
            <option value="video">Video</option>
            <option value="latest-workflows">Last workflows</option>
            <option value="latest-jobs">Last jobs</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Title: </label>
        <div class="col-sm-10">
          {{input type="text" class="form-control boxed" placeholder=model.card.title value=model.card.title}}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Link: </label>
        <div class="col-sm-10">
          {{input type="text" class="form-control boxed" placeholder=model.card.link value=model.card.link}}
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 form-control-label text-xs-right"> Content: </label>
        <div class="col-sm-10">
          <div class="form-group">
            {{textarea class="form-control" id="description" rows="5"  maxlength="1600" height="30vh" value=model.card.description }}
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 col-sm-offset-2">
          <button type="submit" class="btn btn-primary">Create</button>
          {{#link-to 'home'}}
            <button class="btn btn-danger">Cancel</button>
          {{/link-to}}
        </div>
      </div>
    </div>
  </form>
</article>
