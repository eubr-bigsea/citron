<div class="main-wrapper">
  <div class="app sidebar-fixed header-fixed footer-fixed" id="app">
    {{workflow.config-sidebar}}
    <article class="content dashboard-page">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12">
            <div class="title-block">
              <h3 class="title">Results from job {{model.id}}
                <span class="sparkline bar" data-type="bar"></span>
              </h3>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-3">
            {{#link-to 'job.visualization' model (query-params which="correlacao")}}
              {{visualization.card-visualization image='/assets/images/vis_correlacoes.png' algorithm='Correlation' description='Correlation metrics comments authors x law articles'}}
            {{/link-to}}
          </div>
          <div class="col-xs-3">
            {{#link-to 'job.visualization' model (query-params which="sentimento")}}
              {{visualization.card-visualization image='/assets/images/vis_sentimento.png' algorithm='Sentiment Analysis' description='Sentiment Analysis metrics of comments in law articles'}}
            {{/link-to}}
          </div>
          <div class="col-xs-3">
            <a href="#" {{action 'openVisualization' 'wordvec'}}>
              {{visualization.card-visualization image='/assets/images/vis_wordvec.png' algorithm='Wordvec Analysis' description='Wordvec Analysis visualization of all of the filtered comments'}}
            </a>
          </div>
          <div class="col-xs-3">
            <a href="#" {{action 'openVisualization' 'search'}}>
              {{visualization.card-visualization image='/assets/images/vis_search.png' algorithm='Search Tools' description='Exploratory tool which can be used search the filtered comments'}}
            </a>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
