<div class="auth">
  <div class="auth-container">
    <div class="card">
      <header class="auth-header">
        <h1 class="auth-title">
          <div class="logo"></div> ModularAdmin
        </h1>
      </header>
      <div class="auth-content">
        {{#unless successMessage}}
        <p class="text-xs-center">PASSWORD RECOVER</p>
        <p class="text-muted text-xs-center"><small>Enter your email address to recover your password.</small></p>
        {{else}}
        <h6 class="text-xs-center" style="color: #40bb89;">{{successMessage}}</h6>
        {{/unless}}
        <form id="reset-form" {{ action 'request'  on='submit'}}>
          <div class={{emailFormGroup}}>
            <label for="email">Email</label>
            {{input type='email' class='form-control underlined' name='email' id='email' placeholder='Your email address' required='required' value=email}}
            {{#if invalidEmailErrorMessage}}<span id="email-error" class="has-error">{{invalidEmailErrorMessage}}</span>{{/if}}
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-block btn-primary" disabled={{processingRequest}}>Reset</button>
          </div>
          <div class="form-group clearfix">
            <a class="pull-right" > {{#link-to "login"}}return to Login{{/link-to}}</a>
            <a class="pull-left" > {{#link-to "signup"}}Sign Up!{{/link-to}}</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
